<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bpRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="@drawable/border"-->

    <LinearLayout
        android:id="@+id/bhajaneTextViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#DDDDDD"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <WebView
        android:id="@+id/bpWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bhajaneTextViewLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD"
        android:orientation="vertical">

        <TextView
            android:id="@+id/swipeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SwipeText"
            android:textAlignment="center"
            android:textSize="16sp"></TextView>

    </LinearLayout>


</RelativeLayout>